@model IEnumerable<Facturacion.Models.TBLEMPLEADO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutFacturacion.cshtml";
}

<h2>Administracion Empleados</h2>
<div class="well"><a href="~/EmpleadoT/Nuevo" class="btn btn-warning">+ Nuevo</a></div>

<table class="table">
    <tr>
        <th>Nombre</th>     
        <th>Documento</th>
        <th>Telefono</th>
        <th>Email</th>
        <th>Acciones</th>
        
    </tr>

    @foreach(var item in Model)
    {

        <tr>
            <td>@item.strNombre</td>
            <td>@item.NumDocumento</td>
            <td>@item.StrTelefono</td>
            <td>@item.StrEmail</td>
            <td><a href="~/EmpleadoT/Editar/@item.IdEmpleado" class="btn btn-primary ">Editar</a> <a href="~/EmpleadoT/Borrar/@item.IdEmpleado" class="btn btn-danger">Borrar</a></td>
        
        </tr>
    }
</table>
